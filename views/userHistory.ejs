<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lego Collection</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>

  <body tabindex="-1">
    <%- include('partials/navbar', {page: '/userHistory'}) %>

    <div class="container mx-auto p-4">
      <!-- Hero Section -->
      <div class="hero bg-base-200 rounded-lg p-6">
        <div class="text-center hero-content">
          <div class="max-w-md">
            <h1 class="text-4xl font-bold"><%= session.user.userName %></h1>
            <p class="text-lg mt-4">User History: <%= session.user.email %></p>
          </div>
        </div>
      </div>
      <br />

      <!-- Display User History Table -->
      <table class="table table-zebra">
        <thead>
          <tr>
            <th>Login Date/Time</th>
            <th>Client Information</th>
          </tr>
        </thead>
        <tbody>
          <% session.user.loginHistory.forEach((log) => { %>
          <tr>
            <td><%= log.dateTime %></td>
            <td><%= log.userAgent %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>